[filetype]
rules = [
    # Directories
    { name = "*/", fg = "#61b0d8", bold = true },

    # Executables
    { mime = "application/x-executable", fg = "#3ebb3e" },
    { mime = "application/x-sharedlib", fg = "#3ebb3e" },

    # Archives
    { mime = "application/*zip*", fg = "#d47fd4" },
    { mime = "application/x-tar", fg = "#d47fd4" },
    { mime = "application/x-*compressed*", fg = "#d47fd4" },
    { mime = "application/x-rar", fg = "#d47fd4" },
    { mime = "application/x-7z*", fg = "#d47fd4" },

    # Documents
    { mime = "application/pdf", fg = "#e59191" },
    { mime = "application/*doc*", fg = "#61b0d8" },
    { mime = "application/*sheet*", fg = "#3ebb3e" },
    { mime = "application/*presentation*", fg = "#dca13b" },

    # Images
    { mime = "image/*", fg = "#3fbfbf" },

    # Video
    { mime = "video/*", fg = "#d47fd4" },

    # Audio
    { mime = "audio/*", fg = "#dca13b" },

    # Text/Code
    { mime = "text/*", fg = "#b2b2b2" },
    { mime = "application/json", fg = "#dca13b" },
    { mime = "application/javascript", fg = "#dca13b" },
    { mime = "application/x-yaml", fg = "#3fbfbf" },

    # Symlinks
    { name = "*", is = "link", fg = "#3fbfbf", italic = true },

    # Orphan links
    { name = "*", is = "orphan", fg = "#e59191", italic = true },
]
