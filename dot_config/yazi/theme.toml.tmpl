[filetype]
rules = [
    # Directories
    { name = "*/", fg = "#938ad7", bold = true },

    # Executables
    { mime = "application/x-executable", fg = "#3ebb3e" },
    { mime = "application/x-sharedlib", fg = "#3ebb3e" },

    # Archives
    { mime = "application/*zip*", fg = "#fbbba3" },
    { mime = "application/x-tar", fg = "#fbbba3" },
    { mime = "application/x-*compressed*", fg = "#fbbba3" },
    { mime = "application/x-rar", fg = "#fbbba3" },
    { mime = "application/x-7z*", fg = "#fbbba3" },

    # Documents
    { mime = "application/pdf", fg = "#e28181" },
    { mime = "application/*doc*", fg = "#938ad7" },
    { mime = "application/*sheet*", fg = "#3ebb3e" },
    { mime = "application/*presentation*", fg = "#dca13b" },

    # Images
    { mime = "image/*", fg = "#3fbfbf" },

    # Video
    { mime = "video/*", fg = "#fbbba3" },

    # Audio
    { mime = "audio/*", fg = "#dca13b" },

    # Text/Code
    { mime = "text/*", fg = "#f6f3f1" },
    { mime = "application/json", fg = "#dca13b" },
    { mime = "application/javascript", fg = "#dca13b" },
    { mime = "application/x-yaml", fg = "#3fbfbf" },

    # Symlinks
    { name = "*", is = "link", fg = "#3fbfbf", italic = true },

    # Orphan links
    { name = "*", is = "orphan", fg = "#e28181", italic = true },
]
