/* ============================================================================
 * Waybar Style
 * Generated from template with theme: see ~/.config/themes/active
 * ============================================================================ */

* {
    font-family: "JetBrainsMono Nerd Font Propo", monospace;
    font-weight: bold;
    font-size: 13px;
    border: none;
    border-radius: 0;
}

window#waybar {
    background-color: {{BAR_BG_COLOR:css_rgba:BAR_BG_OPACITY}};
}

tooltip {
    background: {{BAR_BG_COLOR:hex}};
    color: {{BAR_FG_COLOR:hex}};
    border-radius: 5px;
    border: 1px solid {{BAR_BORDER_COLOR:hex}};
    padding: 5px 10px;
    margin: 0;
}

/* ============================================================================
 * Workspaces
 * ============================================================================ */

#workspaces label {
    font-size: 30px;
}

#workspaces button {
    padding: 0px 8px 0px 8px;
    color: {{BAR_WORKSPACE_INACTIVE_COLOR:hex}};
    background-color: transparent;
    background: transparent;
    box-shadow: none;
    text-shadow: none;
    animation: none;
}

#workspaces button:hover {
    background-color: {{BAR_WORKSPACE_HOVER_BG_COLOR:css_rgba:BAR_WORKSPACE_HOVER_OPACITY}};
    background: {{BAR_WORKSPACE_HOVER_BG_COLOR:css_rgba:BAR_WORKSPACE_HOVER_OPACITY}};
    color: {{BAR_WORKSPACE_HOVER_COLOR:hex}};
    box-shadow: none;
    text-shadow:
        0 0 3px {{BAR_WORKSPACE_HOVER_COLOR:css_rgba:BAR_GLOW_CLOSE_OPACITY}},
        0 0 6px {{BAR_WORKSPACE_HOVER_COLOR:css_rgba:BAR_GLOW_MID_OPACITY}},
        0 0 9px {{BAR_WORKSPACE_HOVER_COLOR:css_rgba:BAR_GLOW_FAR_OPACITY}};
    animation: none;
}

#workspaces button.active {
    padding: 0px 8px 0px 8px;
    color: {{BAR_WORKSPACE_ACTIVE_COLOR:hex}};
    background-color: transparent;
    background: transparent;
    box-shadow: none;
    text-shadow:
        0 0 3px {{BAR_WORKSPACE_ACTIVE_COLOR:css_rgba:BAR_GLOW_CLOSE_OPACITY}},
        0 0 6px {{BAR_WORKSPACE_ACTIVE_COLOR:css_rgba:BAR_GLOW_MID_OPACITY}},
        0 0 9px {{BAR_WORKSPACE_ACTIVE_COLOR:css_rgba:BAR_GLOW_FAR_OPACITY}};
    animation: none;
}

#workspaces button.active:hover {
    background-color: {{BAR_WORKSPACE_HOVER_BG_COLOR:css_rgba:BAR_WORKSPACE_HOVER_OPACITY}};
    background: {{BAR_WORKSPACE_HOVER_BG_COLOR:css_rgba:BAR_WORKSPACE_HOVER_OPACITY}};
    color: {{BAR_WORKSPACE_ACTIVE_COLOR:hex}};
    text-shadow:
        0 0 3px {{BAR_WORKSPACE_ACTIVE_COLOR:css_rgba:BAR_GLOW_CLOSE_OPACITY}},
        0 0 6px {{BAR_WORKSPACE_ACTIVE_COLOR:css_rgba:BAR_GLOW_MID_OPACITY}},
        0 0 9px {{BAR_WORKSPACE_ACTIVE_COLOR:css_rgba:BAR_GLOW_FAR_OPACITY}};
}

/* ============================================================================
 * Clock
