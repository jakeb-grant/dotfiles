/* ============================================================================
 * Battery
 * ============================================================================ */

#battery {
    padding: 0 12px;
    margin: 0 2px;
    color: {{BAR_BATTERY_COLOR:hex}};
    text-shadow:
        0 0 3px {{BAR_BATTERY_COLOR:css_rgba:BAR_GLOW_CLOSE_OPACITY}},
        0 0 6px {{BAR_BATTERY_COLOR:css_rgba:BAR_GLOW_MID_OPACITY}},
        0 0 9px {{BAR_BATTERY_COLOR:css_rgba:BAR_GLOW_FAR_OPACITY}};
}

#battery.charging {
    color: {{BAR_BATTERY_COLOR:hex}};
}

#battery.warning:not(.charging) {
    color: {{BAR_BATTERY_WARNING_COLOR:hex}};
}

#battery.critical:not(.charging) {
    color: {{BAR_BATTERY_CRITICAL_COLOR:hex}};
    animation: blink 1s linear infinite;
}

@keyframes blink {
    50% {
        opacity: 0.5;
    }
}

/* ============================================================================
 * Network
