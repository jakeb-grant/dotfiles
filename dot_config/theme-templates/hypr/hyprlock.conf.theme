# Hyprlock Configuration

general {
    hide_cursor = true
}

background {
    monitor =
    path = ~/.config/wallpapers/{< _wallpaper >}
    blur_passes = 3
    blur_size = 6
    noise = 0.02
    contrast = 0.9
    brightness = 0.7
}

input-field {
    monitor =
    size = 280, 50
    outline_thickness = 2
    dots_size = 0.25
    dots_spacing = 0.3
    dots_center = true
    outer_color = {< border_focused | hypr_rgba(0.8) >}
    inner_color = {< background | hypr_rgba(0.9) >}
    font_color = {< foreground | hypr_rgb >}
    fade_on_empty = false
    placeholder_text = <i>Password...</i>
    hide_input = false
    check_color = {< primary | hypr_rgba(0.8) >}
    fail_color = {< error | hypr_rgba(0.8) >}
    fail_text = <i>$FAIL</i>
    capslock_color = {< warning | hypr_rgba(0.8) >}
    position = 0, -80
    halign = center
    valign = center
}

label {
    monitor =
    text = $TIME
    color = {< foreground_bright | hypr_rgba(0.95) >}
    font_size = 72
    font_family = sans-serif
    position = 0, 120
    halign = center
    valign = center
}

label {
    monitor =
    text = cmd[update:3600000] date +"%A, %B %d"
    color = {< foreground_dim | hypr_rgba(0.8) >}
    font_size = 18
    font_family = sans-serif
    position = 0, 40
    halign = center
    valign = center
}
