/* Walker Theme */
/* Generated from theme template */

* {
  all: unset;
  font-family: "JetBrainsMono Nerd Font", monospace;
  font-size: 13px;
}

.box-wrapper {
  background: #20272c;
  border: 1px solid #354149;
  border-radius: 12px;
  padding: 16px;
  box-shadow:
    0 19px 38px rgba(0, 0, 0, 0.3),
    0 15px 12px rgba(0, 0, 0, 0.22);
}

/* Search input */
.search-container {
  border-radius: 8px;
}

.input {
  background: #242c31;
  color: #bebebe;
  caret-color: #d7d7d7;
  padding: 10px 14px;
  border-radius: 8px;
}

.input placeholder {
  opacity: 0.5;
}

.input selection {
  background: #313b43;
}

.input:focus {
  background: #2a343a;
}

/* Scrollbar */
scrollbar {
  opacity: 0;
}

/* Results list */
.list {
  color: #bebebe;
}

.item-box {
  border-radius: 8px;
  padding: 10px;
}

child:selected .item-box {
  background: rgba(49, 59, 67, 0.80);
}

child:hover .item-box {
  background: rgba(42, 52, 58, 0.50);
}

.item-subtext {
  font-size: 12px;
  color: #a9a9a9;
}

.item-quick-activation {
  background: rgba(36, 44, 49, 0.50);
  border-radius: 6px;
  padding: 8px;
}

/* Icons */
.normal-icons {
  -gtk-icon-size: 16px;
}

.large-icons {
  -gtk-icon-size: 32px;
}

.item-image-text {
  font-size: 28px;
}

/* Preview panel */
.preview-box,
.placeholder {
  color: #bebebe;
}

.preview {
  background: #242c31;
  border: 1px solid #354149;
  border-radius: 8px;
  color: #bebebe;
}

.preview .large-icons {
  -gtk-icon-size: 64px;
}

/* Keybinds */
.keybinds {
  padding-top: 10px;
  border-top: 1px solid #354149;
  font-size: 12px;
  color: #a9a9a9;
}

.keybind-button {
  opacity: 0.5;
}

.keybind-button:hover {
  opacity: 0.75;
}

.keybind-bind {
  text-transform: lowercase;
  opacity: 0.35;
}

.keybind-label {
  padding: 2px 4px;
  border-radius: 4px;
  border: 1px solid #a9a9a9;
}

/* Calculator */
.calc .item-text {
  font-size: 24px;
}

/* Symbols */
.symbols .item-image {
  font-size: 24px;
}

/* Error state */
.error {
  padding: 10px;
  background: #e59191;
  color: #20272c;
  border-radius: 8px;
}

/* Popover */
popover {
  background: #20272c;
  border: 1px solid #354149;
  border-radius: 12px;
  padding: 10px;
}

/* Provider-specific */
.providerlist .item-subtext {
  font-size: unset;
  opacity: 0.75;
}

.todo.done .item-text-box {
  opacity: 0.25;
}

.todo.urgent {
  font-size: 24px;
}

.todo.active {
  font-weight: bold;
}

.bluetooth.disconnected {
  opacity: 0.5;
}

:not(.calc).current {
  font-style: italic;
}

.preview-content.archlinuxpkgs {
  font-family: monospace;
}
