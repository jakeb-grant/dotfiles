/* Zen Browser Theme - Generated from theme template */

:root {
  /* Main backgrounds (with transparency) */
  --lwt-accent-color: #20272cf2 !important;
  --toolbar-bgcolor: #20272cf2 !important;
  --arrowpanel-background: #283137f2 !important;
  --sidebar-background-color: #20272cf2 !important;
  --zen-main-browser-background: #20272cf2 !important;

  /* Text colors */
  --lwt-text-color: #b2b2b2 !important;
  --toolbar-color: #b2b2b2 !important;
  --arrowpanel-color: #b2b2b2 !important;
  --sidebar-text-color: #b2b2b2 !important;

  /* URL bar / toolbar field */
  --lwt-toolbar-field-background-color: #242c31f2 !important;
  --lwt-toolbar-field-color: #b2b2b2 !important;
  --lwt-toolbar-field-border-color: #354149 !important;
  --lwt-toolbar-field-focus: #313b43 !important;
  --lwt-toolbar-field-focus-color: #c6c6c6 !important;
  --toolbar-field-focus-border-color: #404952 !important;

  /* Buttons */
  --toolbarbutton-hover-background: #2a343a !important;
  --toolbarbutton-active-background: #313b43 !important;
  --lwt-toolbarbutton-icon-fill: #b2b2b2 !important;

  /* Tabs */
  --tab-line-color: #303b41 !important;
  --tabs-border-color: #354149 !important;

  /* Panels/popups */
  --arrowpanel-border-color: #354149 !important;

  /* Accent colors */
  --focus-outline-color: #61b0d8 !important;
  --toolbarbutton-icon-fill-attention: #61b0d8 !important;
}

/* Tab styling */
.tabbrowser-tab {
  background-color: #20272cf2 !important;
}

.tabbrowser-tab:hover {
  background-color: #2a343af2 !important;
}

.tabbrowser-tab[selected] {
  background-color: #313b43f2 !important;
}

/* Navbar / toolbar */
#nav-bar {
  background-color: #20272cf2 !important;
  border-color: #354149 !important;
}

/* URL bar */
#urlbar-background {
  background-color: #242c31f2 !important;
  border-color: #354149 !important;
}

#urlbar[focused] #urlbar-background {
  background-color: #313b43f2 !important;
  border-color: #404952 !important;
}

/* Sidebar */
#sidebar-box {
  background-color: #20272cf2 !important;
}

/* Menus and panels */
menupopup,
panel {
  background-color: #283137f2 !important;
  color: #b2b2b2 !important;
  border-color: #354149 !important;
}

menuitem:hover,
.panel-subview-body > toolbarbutton:hover {
  background-color: #2a343af2 !important;
}

/* Scrollbars */
* {
  scrollbar-color: #313b43 #20272c !important;
}
