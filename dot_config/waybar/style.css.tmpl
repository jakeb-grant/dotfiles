/* ============================================================================
 * Waybar Style
 * Generated from template with theme: see ~/.config/themes/active
 * ============================================================================ */

* {
    font-family: "JetBrainsMono Nerd Font Propo", monospace;
    font-weight: bold;
    font-size: 13px;
    border: none;
    border-radius: 0;
}

window#waybar {
    background-color: rgba(32, 39, 44, 0.90);
}

tooltip {
    background: #20272c;
    color: #b2b2b2;
    border-radius: 5px;
    border: 1px solid #354149;
    padding: 5px 10px;
    margin: 0;
}

/* ============================================================================
 * Workspaces
 * ============================================================================ */

#workspaces label {
    font-size: 30px;
}

#workspaces button {
    padding: 0px 8px 0px 8px;
    color: #9a9a9a;
    background-color: transparent;
    background: transparent;
    box-shadow: none;
    text-shadow: none;
    animation: none;
}

#workspaces button:hover {
    background-color: rgba(178, 178, 178, 0.10);
    background: rgba(178, 178, 178, 0.10);
    color: #b2b2b2;
    box-shadow: none;
    text-shadow:
        0 0 3px rgba(178, 178, 178, 0.50),
        0 0 6px rgba(178, 178, 178, 0.30),
        0 0 9px rgba(178, 178, 178, 0.20);
    animation: none;
}

#workspaces button.active {
    padding: 0px 8px 0px 8px;
    color: #3fbfbf;
    background-color: transparent;
    background: transparent;
    box-shadow: none;
    text-shadow:
        0 0 3px rgba(63, 191, 191, 0.50),
        0 0 6px rgba(63, 191, 191, 0.30),
        0 0 9px rgba(63, 191, 191, 0.20);
    animation: none;
}

#workspaces button.active:hover {
    background-color: rgba(178, 178, 178, 0.10);
    background: rgba(178, 178, 178, 0.10);
    color: #3fbfbf;
    text-shadow:
        0 0 3px rgba(63, 191, 191, 0.50),
        0 0 6px rgba(63, 191, 191, 0.30),
        0 0 9px rgba(63, 191, 191, 0.20);
}

/* ============================================================================
 * Clock
 * ============================================================================ */

#clock {
    padding: 0 12px;
    margin: 0 2px;
    color: #3fbfbf;
    text-shadow:
        0 0 3px rgba(63, 191, 191, 0.50),
        0 0 6px rgba(63, 191, 191, 0.30),
        0 0 9px rgba(63, 191, 191, 0.20);
}

/* ============================================================================
 * System Monitors
 * ============================================================================ */

#cpu {
    padding: 0 12px;
    margin: 0 2px;
    color: #61b0d8;
    text-shadow:
        0 0 3px rgba(97, 176, 216, 0.50),
        0 0 6px rgba(97, 176, 216, 0.30),
        0 0 9px rgba(97, 176, 216, 0.20);
}

#memory {
    padding: 0 12px;
    margin: 0 2px;
    color: #61b0d8;
    text-shadow:
        0 0 3px rgba(97, 176, 216, 0.50),
        0 0 6px rgba(97, 176, 216, 0.30),
        0 0 9px rgba(97, 176, 216, 0.20);
}

#temperature {
    padding: 0 12px;
    margin: 0 2px;
    color: #61b0d8;
    text-shadow:
        0 0 3px rgba(97, 176, 216, 0.50),
        0 0 6px rgba(97, 176, 216, 0.30),
