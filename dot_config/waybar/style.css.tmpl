/* ============================================================================
 * Battery
 * ============================================================================ */

#battery {
    padding: 0 12px;
    margin: 0 2px;
    color: #3ebb3e;
    text-shadow:
        0 0 3px rgba(62, 187, 62, 0.50),
        0 0 6px rgba(62, 187, 62, 0.30),
        0 0 9px rgba(62, 187, 62, 0.20);
}

#battery.charging {
    color: #3ebb3e;
}

#battery.warning:not(.charging) {
    color: #dca13b;
}

#battery.critical:not(.charging) {
    color: #e59191;
    animation: blink 1s linear infinite;
}

@keyframes blink {
    50% {
        opacity: 0.5;
    }
}

/* ============================================================================
 * Network
 * ============================================================================ */

#network {
    padding: 0 12px;
    margin: 0 2px;
    color: #3ebb3e;
    text-shadow:
        0 0 3px rgba(62, 187, 62, 0.50),
        0 0 6px rgba(62, 187, 62, 0.30),
        0 0 9px rgba(62, 187, 62, 0.20);
}

#network.disconnected {
    color: #e59191;
}

