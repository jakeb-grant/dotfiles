#temperature.critical {
    color: #e59191;
    text-shadow:
        0 0 3px rgba(229, 145, 145, 0.50),
        0 0 6px rgba(229, 145, 145, 0.30),
        0 0 9px rgba(229, 145, 145, 0.20);
}

#disk {
    padding: 0 12px;
    margin: 0 2px;
    color: #61b0d8;
    text-shadow:
        0 0 3px rgba(97, 176, 216, 0.50),
        0 0 6px rgba(97, 176, 216, 0.30),
        0 0 9px rgba(97, 176, 216, 0.20);
