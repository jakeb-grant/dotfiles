* {
    font-family: "JetBrainsMono Nerd Font Propo", monospace;
    font-weight: bold;
    font-size: 13px;
    border: none;
    border-radius: 0;
}

window#waybar {
    background: transparent;
}

tooltip {
    background: rgba(32, 39, 44, 0.95);
    color: #b2b2b2;
    border-radius: 12px;
    padding: 8px 14px;
}

tooltip label {
    color: #b2b2b2;
}

/* Base pill styling */
#clock,
#workspaces,
#custom-launcher,
#custom-updates,
#custom-rebuild,
#custom-notification {
    background: rgba(32, 39, 44, 0.95);
    color: #b2b2b2;
    border-radius: 12px;
    padding: 4px 14px;
    margin: 4px 3px;
}

#custom-updates {
    color: #61b0d8;
}

#custom-updates.api-warning {
    color: #dca13b;
}

#custom-rebuild.needs-rebuild {
    color: #dca13b;
}

#custom-launcher {
    font-size: 16px;
    padding: 4px 12px;
    transition: all 150ms ease-out;
}

#custom-launcher:hover {
    background: rgba(42, 52, 58, 0.95);
}

/* Group drawers */
#hardware,
#controls,
#status {
    background: rgba(32, 39, 44, 0.95);
    border-radius: 12px;
    margin: 4px 3px;
    padding: 0 4px;
}

#custom-hardware,
#backlight,
#pulseaudio,
#network,
#battery,
#cpu,
#memory,
#temperature,
#disk {
    background: transparent;
    color: #b2b2b2;
    padding: 4px 10px;
    margin: 0;
}

/* Workspaces */
#workspaces {
    padding: 0 6px;
}

#workspaces button {
    padding: 0 8px;
    background: rgba(36, 44, 49, 0.50);
    color: #9a9a9a;
    border-radius: 8px;
    margin: 6px 2px;
    font-size: 15px;
    transition: all 150ms ease-out;
}

#workspaces button:hover {
    background: rgba(42, 52, 58, 0.60);
    color: #b2b2b2;
    box-shadow: none;
    text-shadow: none;
}

#workspaces button.active {
    background: rgba(49, 59, 67, 0.80);
    color: #c6c6c6;
    padding: 0 28px;
}

/* Status indicators */
#temperature.critical,
#battery.critical:not(.charging):not(.plugged),
#network.disconnected {
    color: #e59191;
}

#battery.warning:not(.charging):not(.plugged) {
    color: #dca13b;
}

#battery.critical:not(.charging):not(.plugged) {
    animation: blink 1s linear infinite;
}

#battery.charging,
#battery.plugged,
#battery.full {
    color: #3ebb3e;
    animation: none;
}

@keyframes blink {
    50% { opacity: 0.5; }
}

#pulseaudio.muted {
    color: #9a9a9a;
}

/* Notification indicator */
#custom-notification {
    font-size: 16px;
    padding: 4px 12px;
}

#custom-notification.dnd-notification,
#custom-notification.dnd-none,
#custom-notification.dnd-inhibited-notification,
#custom-notification.dnd-inhibited-none {
    color: #dca13b;
}
